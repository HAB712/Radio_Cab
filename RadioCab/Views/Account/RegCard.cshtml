@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RadioCab - Sign Up</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/regcard.css" rel="stylesheet" />
</head>
<body>
    <div class="header">
        <div class="logo">RadioCab 🚕</div>
        <h2>Join RadioCab Today</h2>
        <p>Choose your account type to get started</p>
    </div>

    <div class="cards-container">
        <!-- User Card -->
        <div class="signup-card">
            <div class="card-icon">
                <i class="fas fa-user"></i>
            </div>
            <h3 class="card-title">User</h3>
            <p class="card-description">Book rides easily and travel comfortably</p>
            <ul class="card-features">
                <li>Quick ride booking</li>
                <li>Real-time tracking</li>
                <li>Multiple payment options</li>
                <li>24/7 customer support</li>
            </ul>
            <a class="signup-btn" asp-controller="Account" asp-action="Register">
                <i class="fas fa-user-plus"></i> Sign Up as User
            </a>
        </div>

        <!-- Driver Card -->
        <div class="signup-card">
            <div class="card-icon">
                <i class="fas fa-id-card"></i>
            </div>
            <h3 class="card-title">Driver</h3>
            <p class="card-description">Start earning by driving with us</p>
            <ul class="card-features">
                <li>Flexible working hours</li>
                <li>Competitive earnings</li>
                <li>Weekly payouts</li>
                <li>Insurance coverage</li>
            </ul>
            <a class="signup-btn" asp-controller="Account" asp-action="DriverRegister">
                <i class="fas fa-car"></i> Sign Up as Driver
            </a>
        </div>

        <!-- Company Card -->
        <div class="signup-card" >
            <div class="card-icon">
                <i class="fas fa-building"></i>
            </div>
            <h3 class="card-title">Company</h3>
            <p class="card-description">Corporate solutions for your business</p>
            <ul class="card-features">
                <li>Bulk ride booking</li>
                <li>Dedicated account manager</li>
                <li>Monthly invoicing</li>
                <li>Employee management</li>
            </ul>
            <a class="signup-btn" asp-controller="Account" asp-action="CompanyRegister">
                <i class="fas fa-briefcase"></i> Sign Up as Company
            </a>
        </div>
    </div>
</body>
</html>
